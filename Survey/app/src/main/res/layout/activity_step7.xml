<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_step7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cqu.xiang.survey.Step7Activity">

    <TextView
        android:id="@+id/tvKind"
        android:text="What kinds of online games do you like?"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/cbK1"
        android:layout_below="@id/tvKind"
        android:text="CasualÂ games"
        android:layout_marginTop="15dp"
        android:layout_marginStart="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:onClick="cbGroup1" />

    <CheckBox
        android:id="@+id/cbK2"
        android:layout_below="@id/cbK1"
        android:text="Net battle games"
        android:layout_alignStart="@id/cbK1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:onClick="cbGroup1"/>

    <CheckBox
        android:id="@+id/cbK3"
        android:layout_below="@id/cbK2"
        android:text="MMORPG"
        android:layout_alignStart="@id/cbK1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:onClick="cbGroup1"/>

    <CheckBox
        android:id="@+id/cbK4"
        android:layout_below="@id/cbK3"
        android:text="Online flash mini-games"
        android:layout_alignStart="@id/cbK1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:onClick="cbGroup1"/>

    <CheckBox
        android:id="@+id/cbK5"
        android:layout_below="@id/cbK4"
        android:text="Others"
        android:layout_alignStart="@id/cbK1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:onClick="cbGroup1"/>

    <Button
        android:text="Step 7: Choose your favorite games"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnS7"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:onClick="btnS7"/>

</RelativeLayout>